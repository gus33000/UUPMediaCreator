<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net7.0</TargetFramework>
    <ApplicationManifest>app.manifest</ApplicationManifest>
    <Platforms>AnyCPU;x86;x64;arm64</Platforms>
    <RuntimeIdentifiers>win-x86;win-x64;win-arm64</RuntimeIdentifiers>
    <OutputPath>$(SolutionDir)build\$(Platform)\$(Configuration)\UUPMediaCreator.Broker\</OutputPath>
    <IntermediateOutputPath>$(SolutionDir)intermediate\$(Platform)\$(Configuration)\UUPMediaCreator.Broker\</IntermediateOutputPath>
    <CodeAnalysisRuleSet>MinimumRecommendedRules.ruleset</CodeAnalysisRuleSet>

    <TargetPlatformIdentifier>Windows</TargetPlatformIdentifier>
    <TargetPlatformMinVersion>10.0.16299.0</TargetPlatformMinVersion>
    <TargetPlatformVersion>10.0.17763.0</TargetPlatformVersion>
    <CsWinRTWindowsMetadata>sdk</CsWinRTWindowsMetadata>


	<Company>IT Dev Team</Company>
	<Copyright>Copyright Â© Gustave Monce and Contributors</Copyright>
	<AssemblyVersion>3.1.5.0</AssemblyVersion>
	<FileVersion>3.1.5.0</FileVersion>
	<Version>3.1.5.0</Version>
	<Product>UUP Media Creator Broker</Product>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Windows.CsWinRT" Version="2.0.3" />
    <Manifest Include="$(ApplicationManifest)" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\UnifiedUpdatePlatform.Common.Messaging.NET\UnifiedUpdatePlatform.Common.Messaging.NET.csproj" />
    <ProjectReference Include="..\..\UnifiedUpdatePlatform.Media.Creator.NET\UnifiedUpdatePlatform.Media.Creator.NET.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="cdimage.exe">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Content>
  </ItemGroup>
</Project>
